            android:text="Yanne"
            android:textSize="30sp"
            android:textColor="@color/purple_500"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Victor"
            android:textSize="30sp"
            android:textColor="@color/purple_500"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enzo"
            android:textSize="30sp"
            android:textColor="@color/purple_500"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Maxence"
